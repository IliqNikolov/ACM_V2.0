@model Models.CardViewModel

@{
    ViewData["Title"] = "Pay";
}

<h1>Pay Bill</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Pay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVC" class="control-label"></label>
                <input asp-for="CVC" class="form-control" />
                <span asp-validation-for="CVC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bill Amount</label>
                <input asp-for="BillAmount" disabled="disabled" class="form-control" />
                <span asp-validation-for="BillAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment" class="control-label"></label>
                <input asp-for="Apartment" disabled="disabled" class="form-control" />
                <span asp-validation-for="Apartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Message</label>
                <input asp-for="Text" disabled="disabled" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Issued On</label>
                <input asp-for="IssuedOn" disabled="disabled" class="form-control" />
                <span asp-validation-for="IssuedOn" class="text-danger"></span>
            </div>
            <input asp-for="BillId" hidden="hidden" class="form-control" />
            <input asp-for="IssuedOn" hidden="hidden" class="form-control" />
            <input asp-for="Text" hidden="hidden" class="form-control" />
            <input asp-for="Apartment" hidden="hidden" class="form-control" />
            <input asp-for="BillAmount" hidden="hidden" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Pay The Bill" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to Bills</a>
</div>

